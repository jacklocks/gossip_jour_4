<h1>Editer un Gossip</h1>

<%= form_for @gossip do |f|%>
<div class="form-group">
<label>Titre du Gossip</label>
<%= f.text_field :title, class: 'form_control' %>
</div>

<div class="form-group">
<label>Contenu du Gossip</label>
<%= f.text_area :content, class: 'form-control' %>
</div>

<div class="form-group">
<button type="submit">Modifier le Gossip</button>
</div>

<% end %>


<%= button_to 'Supprimer', @gossip, method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce gossip ?' }, class: 'btn btn-danger' %>



